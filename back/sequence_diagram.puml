@startuml
' Define participants
participant "User's Browser" as Frontend
participant "FastAPI Backend (main.py)" as Backend
participant "Mock Company DB (data.json)" as DB

' Define flow for getting the portfolio
Frontend -> Backend ++ : 1. GET /api/portfolio
Backend -> Backend : 2. load_data("data.json")
Backend -> DB ++ : 3. Reads data.json
DB --> Backend -- : 4. Returns file content
Backend -> Backend : 5. extract_name_n_ticker(data)
Backend --> Frontend -- : 6. Returns List[CompanyPortfolioItem]

' Define flow for getting a single company analysis
Frontend -> Backend ++ : 7. GET /api/company/{ticker}
Backend -> DB ++ : 8. Accesses MOCK_COMPANY_DB[ticker]
DB --> Backend -- : 9. Returns company data
Backend -> Backend : 10. get_mock_llm_analysis(claim, evidence)
Backend --> Frontend -- : 11. Returns CompanyAnalysis JSON

@enduml
